	    UserDao dao = (UserDao) context.getBean("ProductDao");
	       
	   
	   User user = new User();;
	dao.saveProduct(user );
	      
	   	 
	   List<User>  list2 = dao.getUsers();  
	  for (Iterator iterator = list2.iterator(); iterator.hasNext();) {
